@{
    Layout = "_Layout"; // Use the shared layout
}

<h1>Welcome to My Fruit Store!</h1>

<p>The best and most delicious fruits.</p>

<div class="row">
    <div class="col-md-4">
        <h2>Featured Products</h2>
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Index">View All Products</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Cart" asp-action="Index">Go to Cart</a>
            </li>
        </ul>
    </div>
    <div class="col-md-8">
        <h2>About Us</h2>
        <p>We offer a wide variety of fresh fruits sourced from local farmers. Our mission is to provide high-quality produce at affordable prices.</p>
    </div>
</div>